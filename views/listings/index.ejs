<%- layout("layouts/boilerplate") %>
<body>
    <h1 style="color:#bdc0b9; text-align: center;">Urban Nest</h1>
    
        <form action="/listings/new" meathod="GET">
            <button class="new-button">Create New</button>
        </form>
        <div class="row row-col-lg-4 row-col-md-2 row-col-sm-1" style="display: flex; justify-content: space-evenly;">
            <% for(let listing of allListings){ %>
                <!-- <a href="/listings/<%= listing._id %>" class="listing_link"> -->
                    <a href="/listings/<%= listing._id %>" class="card" style="width: 15rem;">
                        <!-- <div class="class-image-overlay">CR</div> -->
                        <img src="<%- listing.image %>" class="card-img-top" style="height:20rem;" alt="...">
                        <div class="card-body">
                            <b><h5 class="card-text"><%- listing.title %></h5></b>
                            <p class="card-text" >&#8377;<%- listing.price.toLocaleString("en-IN") %></p>
                            <p class="card-text" ><%- listing.location %></p>

                        <p class="card-text"><%- listing.description %></p>
                        </div>
                    </a>
                <!-- </a> -->
            <%}%>
        </div>
        
</body>




